        "parameter_category": "Sound/Interaction Parameters",
        "values": {
            "0": "Disabled - toggles blade PLI in single switch mode",
            "1": "Enabled"
        }
    },

    "beep": {
        "type": "integer",
        "range": [0, 100],
        "description": "Sets the volume of user interface sounds and system beeps",
        "display_type": "spinner",
        "parameter_category": "Sound/Interaction Parameters"
    },

    "muteoff": {
        "type": "integer",
        "range": [0, 1],
        "description": "Defines if power-off sound plays when Mute-on-the-Go engaged",
        "display_type": "toggle",
        "parameter_category": "Sound/Interaction Parameters",
        "values": {
            "0": "No power-off sound when muted",
            "1": "Play power-off sound when muted"
        }
    },

    "muteb": {
        "type": "integer",
        "range": [0, 3],
        "description": "Enables mute-on-the-boot feature",
        "display_type": "dropdown",
        "parameter_category": "Sound/Interaction Parameters",
        "notes": "Controls volume of boot sound with angle of hilt. If enabled, also controls menu volume"
    },

    "switch": {
        "type": "integer",
        "range": [0, 3],
        "description": "Selects switch type for saber activation",
        "display_type": "dropdown",
        "parameter_category": "Sound/Interaction Parameters",
        "values": {
            "0": "Normally-open switch",
            "1": "Normally-closed switch",
            "2": "Momentary switch (recommended)",
            "3": "Single switch"
        }
    },

    "sleep": {
        "type": "integer",
        "range": [0, 18446744073709551615],
        "description": "Time before sound board enters sleep mode",
        "display_type": "spinner",
        "parameter_category": "Sound/Interaction Parameters",
        "notes": "Value in milliseconds (e.g., 300,000 = 5 minutes). 0 to disable. Turns off idle accent sequence"
    },

    "deep": {
        "type": "integer",
        "range": [0, 18446744073709551615],
        "description": "Time before sound board enters deep sleep mode",
        "display_type": "spinner",
        "parameter_category": "Sound/Interaction Parameters",
        "notes": "Value in milliseconds. Counter starts after sleep mode. Sleep and Deep Sleep durations are cumulative. <0.25mA power usage"
    },

    "qkignite": {
        "type": "integer",
        "range": [0, 1],
        "description": "Enables blade ignition right after waking from deep sleep",
        "display_type": "toggle",
        "parameter_category": "Sound/Interaction Parameters",
        "values": {
            "0": "Normal boot",
            "1": "Quick ignite (skips boot sound)"
        }
    },

    "orient": {
        "type": "integer",
        "range": [0, 3],
        "description": "Defines the board plane orientation in the hilt",
        "display_type": "dropdown",
        "parameter_category": "Sound/Interaction Parameters"
    },

    "valsnd": {
        "type": "integer",
        "range": [0, 1],
        "description": "Controls soundbank description sound in vocal menu",
