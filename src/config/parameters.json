    "type": "integer",
    "range": [0, 10000],
    "description": "Anti power-off delay",
    "display_type": "spinner",
    "parameter_category": "Sound/Interaction Parameters",
    "notes": "Values from 100 to 500 ms are relevant for preventing accidental turn-off. Set to zero if using offp parameter"
    },

    "onp": {
        "type": "integer",
        "range": [0, 1],
        "description": "Anti power-on protection",
        "display_type": "toggle",
        "parameter_category": "Sound/Interaction Parameters",
        "values": {
            "0": "Disabled",
            "1": "Enabled - requires aux button confirmation"
        },
        "notes": "When enabled, requires aux button press after activation switch to ignite blade"
    },

    "ond": {
        "type": "integer",
        "range": [0, 10000],
        "description": "Power-on delay and double click time base",
        "display_type": "spinner",
        "parameter_category": "Sound/Interaction Parameters",
        "notes": "Values of 20 to 50ms are relevant"
    },

