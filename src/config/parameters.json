        "parameter_category": "Sound/Interaction Parameters",
        "values": {
            "0": "USB serial port",
            "1": "TTL (legacy RICE) serial port",
            "2": "Both USB and TTL ports",
            "3": "WebUSB",
            "4": "All serial ports"
        }
    },

    "vol": {
        "type": "integer",
